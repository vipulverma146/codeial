<link rel="stylesheet" href="/css/user_profile.css">

<img src="<%=user.avatar%>" alt="<%=user.name%>" width="100">

<%if(user.id==profile_user.id){%>
    <br>
    <br>


    <form action="/users/update/<%=profile_user.id%>" method="POST" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Enter your Name" value="<%=profile_user.name%>" required>

        <input type="email" name="email" placeholder="Enter your email" value="<%=profile_user.email%>" required>

        <!-- <input type="password" name="password" placeholder="Enter your password" value="Password"> -->

        <input type="file" name="avatar" placeholder="Upload profile">

        


        <input type="submit" value="Update">

    </form>

 <%}else{%>
    
    <h3>
        <p>Name:<%=profile_user.name%></p>
        <p>Email:<%=profile_user.email%></p>
    </h3>

 <%}%>   








